<!-- Search Box -->
<div class="bg-gradient-to-r from-primary-50 to-primary-100 py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="text-2xl font-bold text-gray-900 sm:text-3xl md:text-4xl">
        {{ site.settings.slogan |  default: 'Quick to Create, Easy to Organize' }}
      </h1>
      <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
        {{ site.settings.description |  default: 'The easiest way to create online user manuals for your next product.' }}
      </p>

      <!-- Search Box -->
      <div class="mt-10 max-w-xl mx-auto">
        {% form_tag 'search', class: 'relative' %}
          <input type="text" name="{{form.keywords_field_name}}" value="{{ search.keywords | escape_once }}"
            placeholder="{{ "placeholders.search" | t }}"
            autocomplete="on" class="w-full px-12 py-3 border border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500">
          <div class="absolute left-4 top-3.5">
            <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
            </svg>
          </div>
        {% endform_tag %}

        <!-- Popular Searches -->
        {% if page.settings.tags %}
          <div class="mt-4 text-sm text-gray-500">
            <span>{{ 'generic.tags' | t }}:</span>
            {% for tag in page.settings.tags %}
              <a href="{{ tag.path }}" class="text-blue-600 hover:text-blue-800 mx-1">{{ tag.name }}</a>
              {%- unless forloop.last -%}, {%- endunless -%} 
            {% endfor %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>